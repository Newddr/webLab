{% extends "_layout.twig" %}

{% block content %}
<div class="ml-5 mb-2 container">
    <h1>Рeдактируем {{object.type}}</h1>
    <hr>
    
    {% if message %}
    <div class="alert alert-info">
    {{message}}
    </div>
    
    {% endif %}
    
    <form type=""  method="POST" enctype="multipart/form-data" class="row g-3">
        <div class="col-4">
            <label class="form-label">Название</label>
            <input type="text" class="form-control" name="title" value="{{object.title}}">
        </div>
        <div class="col-4">
            <label class="form-label">Краткое описание</label>
            <input type="text" class="form-control" name="description" value={{object.description}}>
        </div>
        <div class="col-4">
            <label class="form-label">Тип</label>
            <select class="form-control" name="type">
                {% for o in gouse_types %}
                <option value={{o.type}} {% if o.title == object.type %} SELECTED{% endif %}>{{o.type}}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3">
  <label for="formFile" class="form-label">Изображение</label>
  <input class="form-control" type="file" id="formFile" name="image" value={{object.image}}>
</div>
        <div class="col-12">
        <div class="col-4">
            <label class="form-label">Заголовок</label>
            <input type="text" class="form-control" name="infoBig" value={{object.infoBig}}>
        </div>
            <textarea name="info" placeholder="Полное описание..." class="form-control" rows="5">{{object.info}}</textarea>
        </div>
        <div class="col-12 text-end">
            <button name="object" type="submit" value="object" class="btn btn-primary">Изменить</button>
        </div>
    </form>
    </div>


    

{% endblock %}