{% extends "_layout.twig" %}

{% block content %}

<div class="container d-flex flex-direction-row" style="flex-wrap: wrap; width: max-content">
    {% for object in gouse_objects%}
    <div class = "d-flex flex-column" style="
      width: 250px;
      height: 250px;
      margin-right: 50px;
      margin-bottom: 145px;
    ">
    
        <div class="list-group position-relative" style="
        outline: 1px solid rgba(100, 100, 100, 0.25);
        border-radius: 10px;
        padding: 5px;
        margin-top: 15px;
      ">
        
        

        <img src={{object.image}} style="
            width: 240px;
            height: 240px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-top: 10px;
            border-radius: 25%;
            margin-bottom: 10px;
          ">
        <a class = "btn btn-primary" href = "/gouse-object/{{object.id}}" style="
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
          "> {{object.title}}</a>

              <div style="
                display: flex;
                justify-content: center;
                align-items: center;
                text-align: center;
              ">
              <a class="me-3" href="/gouse-object/{{object.id}}/image">Изображение</a>
              <a  href="/gouse-object/{{object.id}}/info">Описание</a>
                  {# {% for i in section %}
                  <a href="{{menu[k].url}}{{i.url}}" class="btn btn-link" >{{object.id}}</a>
                  {% endfor %}    #}

            </div>
        
      </div>

    </div>
    {% endfor %}

</div>
{% endblock %}